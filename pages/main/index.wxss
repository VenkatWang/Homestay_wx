.mainBackground {
  width: 750rpx;
}

.checkIn {
  width: 637rpx;
  height: 420rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 16rpx 17rpx 7rpx rgba(148, 147, 147, 0.1);
  border-radius: 16rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  top: 210rpx;
}

.checkInContent {
  width: 548rpx;
  height: 340rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.site {
  width: 100%;
  height: 41rpx;
}

.time {
  width: 100%;
  height: 41rpx;
  background-color: green;
}

.searchBtn .van-button {
  width: 480rpx;
  height: 70rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 58rpx;
}

.tag {
  width: 90%;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  display: flex;
  justify-content: space-between;
}

.tag view van-icon {
  margin-right: 10rpx;
  position: relative;
  top: 10rpx;
}

.tag view text {
  font-family: PingFang-SC-Bold;
  font-size: 18rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 4rpx;
  letter-spacing: 1rpx;
  color: #000000;
  opacity: 0.3;
}

.homestay {
  position: relative;
  top: 190rpx;
}

.van-dropdown-menu {
  height: 40rpx !important;
  box-shadow: 0 0px 0px #ccc !important;
  margin-right: 60rpx;
  margin-left: -10rpx;
}


.van-ellipsis {
  font-family: PingFang-SC-Heavy;
  font-size: 26rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 1rpx;
  color: #000000;
  opacity: 0.5;
}

.homestayContent {
  width: 650rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  margin-top: 45rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.homestayItem {
  width: 307rpx;
  height: 471rpx;
  margin-bottom: 40rpx;
  box-shadow: 0rpx 16rpx 17rpx 7rpx rgba(148, 147, 147, 0.1);
  border-radius: 10rpx;
  position: relative;
}

.homestayItem image {
  width: 305rpx;
  height: 305rpx;
  border-radius: 10rpx;
  margin-bottom: 25rpx;
}

.homestayItem .homestayTitle {
  font-family: PingFang-SC-Heavy;
  font-size: 32rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 4rpx;
  letter-spacing: 0rpx;
  color: #000000;
  opacity: 0.85;
  margin-left: 5rpx;
}

.homestayPrice {
  position: absolute;
  bottom: 0;
  font-family: SanFranciscoDisplay-Bold;
  font-size: 16rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #e05c63;
  margin-left: 5rpx;

}

.homestayPrice text:last-child {
  font-size: 32rpx;
}

.homestayItem .van-rate {
  position: absolute;
  bottom: 65rpx;
}

.mainBottom {
  width: 100%;
  height: 50rpx;
  position: absolute;
  bottom: 0;
}